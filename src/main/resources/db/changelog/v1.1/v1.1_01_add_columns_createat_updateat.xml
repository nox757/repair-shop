<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="20201220-add-columns-createat-updatead" author="Chibisov Andrey">
        <addColumn schemaName="public"
                   tableName="material">
            <column afterColumn="supplier_id"
                    name="created_at"
                    type="timestamp with time zone">
            </column>
            <column afterColumn="created_at"
                    name="updated_at"
                    type="timestamp with time zone">
            </column>
        </addColumn>
        <addColumn schemaName="public"
                   tableName="request">
            <column afterColumn="amount"
                    name="created_at"
                    type="timestamp with time zone">
            </column>
            <column afterColumn="created_at"
                    name="updated_at"
                    type="timestamp with time zone">
            </column>
        </addColumn>
        <addColumn schemaName="public"
                   tableName="request_material">
            <column afterColumn="request_id"
                    name="created_at"
                    type="timestamp with time zone">
            </column>
            <column afterColumn="created_at"
                    name="updated_at"
                    type="timestamp with time zone">
            </column>
        </addColumn>
        <addColumn schemaName="public"
                   tableName="supplier">
            <column afterColumn="phone_agent"
                    name="created_at"
                    type="timestamp with time zone">
            </column>
            <column afterColumn="created_at"
                    name="updated_at"
                    type="timestamp with time zone">
            </column>
        </addColumn>
        <addColumn schemaName="public"
                   tableName="users">
            <column afterColumn="email"
                    name="created_at"
                    type="timestamp with time zone">
            </column>
            <column afterColumn="created_at"
                    name="updated_at"
                    type="timestamp with time zone">
            </column>
        </addColumn>
        <comment>Задача по добавлению колонок создания и обновления записей</comment>
    </changeSet>
</databaseChangeLog>